<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8"><%= image_tag("/assets/banner.png", class: "banner") %></div>
    <div class="col-md-2"></div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-3" id="normalMode">
      <h3><%= link_to "Normal Mode", games_path, id: "goNormal" %></h3>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-3" id="gameMode">
      <h3 id="joinGame">Game Mode</h3>
    </div>
    <div class="col-md-2"></div>
  </div>

  <div id="gameLogin">
    <a class="boxclose" id="boxclose"></a>
    <div class="row">
      <% unless current_user.nil? %>
        <%# <% collection_select() %1> %>
      <% else %>
        <div class="col-md-2"></div>
        <div class="col-md-4"><%= render 'users/registrations/new' %></div>

        <div class="col-md-4"><%= render 'users/sessions/new' %></div>
        <div class="col-md-2"></div>
      <% end %>
    </div>
  </div>
</div>
<script>

var boxClose = $("#boxclose");
boxClose.on("click", function () {
  $(boxClose.parent()[0]).hide();
})

var joinGame = $("#joinGame");
var countClick = 1;
joinGame.on("click", function () {
  countClick += 1;
  if (countClick % 2 == 0) {
    $("#gameLogin").css("display", "block");
  } else {
    $("#gameLogin").css("display", "none");
  }
});
  </script>


